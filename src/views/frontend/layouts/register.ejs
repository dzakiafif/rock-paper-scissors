<div class="main-page page w-100 text-center" id="home">
  <div class="d-flex align-items-center flex-column bd-highlight h-100">
    <div class="px-4 bd-highlight">
      <div class="login-page">
        <div class="form">
          <h3 style="color: #ffb548;"><b>CREATE ACCOUNT</b></h3>
          <div class="register-form" style="margin-top: 2rem">
            <%if(typeof error != "undefined"){%>
              <span style="color: black;"><%= error.message %></span><br/>
            <%}%>
            <form action="/register" method="post">
              <input type="text" placeholder="username" name="username" id="username" />
              <input type="password" placeholder="password" name="password" id="password" />
              <button type="submit" >create</button>
            </form>
            <p class="message">Already registered? <a href="/login">Sign In</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>