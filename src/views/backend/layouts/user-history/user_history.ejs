<div class="container-fluid">
  <h1 class="h3 mb-2 text-gray-800">User History</h1>
  <p class="mb-4">
    User History is where we put all data about user history that play in our
    game
  </p>

  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">User History Table</h6>
    </div>
    <div class="card-body">
      <div class="table-responsive" style="padding-top: 1rem">
        <table
          class="table table-bordered"
          id="dataTable"
          width="100%"
          cellspacing="0"
        >
          <thead>
            <tr>
              <th>User</th>
              <th>Score</th>
              <th>Login At</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% if(data.length > 0) { %>
              <% for(i = 0; i < data.length; i++) { %>
                <tr>
                  <td><%= data[i].UserGame.username %></td>
                  <td><%= data[i].score %></td>
                  <td><%= data[i].login_at %></td>
                  <td>
                    <a class="btn btn-danger btn-circle btn-sm" href="/userhistory/delete/<%= data[i].id %>"
                      ><i class="fas fa-trash"></i
                    ></a>
                  </td>
                </tr>
              <% } %>  
            <% } else { %>
              <tr>
                <td colspan="4" style="text-align: center;">Tidak ada data</td>
              </tr>
            <% } %>  
            <!-- <tr>
              <td>Tiger Nixon</td>
              <td>System Architect</td>
              <td>Edinburgh</td>
              <td>61</td>
              <td>
                <a class="btn btn-primary btn-circle btn-sm"
                  ><i class="fas fa-edit"></i
                ></a>
                <a class="btn btn-danger btn-circle btn-sm"
                  ><i class="fas fa-trash"></i
                ></a>
              </td>
            </tr> -->
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
